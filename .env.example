DRIVER=~fastapi
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO
COMMAND_START=["/", ""]

# Gemini API Configuration
# Get keys from: https://aistudio.google.com/app/apikey
# Uses official google-genai SDK with intelligent model auto-selection
GEMINI_API_KEYS=["your_gemini_key_1", "gen-lang-client-0265689202"]

# OpenWeatherMap Configuration (Required for Weather)
# Get key from: https://home.openweathermap.org/api_keys
OPENWEATHER_API_KEY=your_openweather_api_key

# Target Groups for Scheduled Pushes (Daily Weather, Summaries)
# List of Group IDs (numbers only)
TARGET_GROUPS=["574301006", "527633343"]

# Message Forwarding Configuration
# Threshold (in characters) to trigger forward message mode
FORWARD_THRESHOLD=100

# Bot nickname displayed in forward messages
BOT_NICKNAME=AI 助手

# Multimodal Feature Configuration (Phase 1: Image Recognition)
# Media cache directory
MEDIA_CACHE_DIR=data/temp_media

# Cache expiration time in hours
MEDIA_CACHE_EXPIRE_HOURS=24

# Maximum download size in MB
MEDIA_MAX_DOWNLOAD_SIZE_MB=50

# Feature toggles
ENABLE_IMAGE_RECOGNITION=true
ENABLE_VOICE_PROCESSING=true    # Phase 2: 已启用
ENABLE_VIDEO_ANALYSIS=false

# Image Compression (Cost Optimization)
ENABLE_IMAGE_COMPRESSION=true
IMAGE_MAX_SIZE=1024              # 最大尺寸（像素）
IMAGE_QUALITY=85                 # JPEG 质量 (0-100)

# User Quota Management (Cost Optimization)
ENABLE_QUOTA_LIMIT=true
DAILY_MULTIMODAL_LIMIT=10       # 每用户每日多模态次数限制
QUOTA_FILE=data/user_quotas.json # 配额数据文件

# Chat Stats (水群榜)
ENABLE_CHAT_STATS=true           # 启用水群榜
STATS_PUSH_HOUR=23               # 推送时间（小时，24小时制）
STATS_TOP_COUNT=10               # 显示前N名
STATS_FILE=data/chat_stats.json  # 统计数据文件
